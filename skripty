
02 pocet operator 1 = 

countx(
    --krok3: Funkce FILTER() vraci
    --tabulku
    filter(
    --krok1: Funkce FILTER() prebira
    -- tabulku data filtrovanou vizualem
    data,
    --krok2: Aplikace filtru na sloupec
    --[uzivatel]
    data[uzivatel] = "1"),
--krok4: Pocet hodnot ve sloupci [vaha]
--tabulky vracene funkci FILTER()
data[vaha])



03 pocet vse = 

COUNTX(
--krok1: Funkce ALL() vraci kopii tabulky
--data zbavenou vsech filtru
    ALL(data),
--krok2: Pocet hodnot ve sloupci [vaha]
--tabulky vracene funkci ALL()
data[vaha])
