
01 suma srazek = 
-- zakladni agregacni funkce, ktera respektuje filtry vizualu,
-- zadne nepridava ani nerusi
sum(data[PRCP])



02 suma srazek turany = 
--krok4: Funkce SUMX() scita tabulku vracenou funkci FILTER()
SUMX(
    --krok3: Funkce FILTER() vraci tabulku
    FILTER(
        --krok1: Funkce FILTER() prebira tabulku data filtrovanou vizualem
        data
        --krok2: Funkce FILTER() aplikuje filtr nad sloupec NAME
        ,data[NAME] = "TURANY")
,data[PRCP])



03 suma prcp vsechny roky = 
--krok2: Funkce SUMX() scita sloupec PRCP tabulky vracene funkci ALL()
sumx(
    --krok1: Funkce ALL() vytrvari kopii tabulky data se vsemi jejimi hodnotami,
    -- tj. rusim filtr vizualu
    all(data),
data[PRCP])



04 suma rok 2000 = 

--krok3: Funkce SUMX() scita sloupec PRCP tabulky vracene funkci FILTER()
SUMX(
    --krok2: Funkce FILTER() filtruje tabulku vracenou funkci ALL()
    FILTER(
        --krok1: Funkce ALL() vytvari kopii tabulky data se vsemi jejimi hodnotami
        ALL(data)
        ,data[Rok] = 2000),
data[PRCP])
