
02 pocet operator 1 = 

countx(
    --krok3: Funkce FILTER() vraci
    --tabulku
    filter(
    --krok1: Funkce FILTER() prebira
    -- tabulku data filtrovanou vizualem
    data,
    --krok2: Aplikace filtru na sloupec
    --[uzivatel]
    data[uzivatel] = "1"),
--krok4: Pocet hodnot ve sloupci [vaha]
--tabulky vracene funkci FILTER()
data[vaha])



03 pocet vse = 

COUNTX(
--krok1: Funkce ALL() vraci kopii tabulky
--data zbavenou vsech filtru
    ALL(data),
--krok2: Pocet hodnot ve sloupci [vaha]
--tabulky vracene funkci ALL()
data[vaha])



04 pocet den 30 = 

COUNTX(
    --krok2: Filtrovani tabulky vracene
    --funkci ALL()
    filter(
        --krok1: Kopie tabulky data
        --zbavena vsech filtru
        all(data),
    data[den_mesice] = 30),
--krok3: Agregace sloupce [vaha]
--tabulky vracene funkci FILTER()
data[vaha])



08 tydenni maximum = 

IF(
    ROUND(sum(data[vaha]),2) = 
ROUND(
MAXX(
    SUMMARIZE(
        filter(
        ALL(data),
        data[cislo_tydne] = 
    MAX(data[cislo_tydne])),
    data[den_tydne],
    "Denni incidenty",
    sum(data[vaha])),
[Denni incidenty]),2),"GOLD")
